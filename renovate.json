{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "schedule": ["* 0-6 * * *"],
  "extends": ["config:recommended"],
  "enabledManagers": ["nuget"],
  "prHourlyLimit": 0,
  "commitMessagePrefix": ":arrow_up:",
  "commitMessageAction": "Bump",
  "prBodyTemplate": "{{{header}}}## üìù Overview\n\n**Purpose:**\n\n{{{table}}}{{{warnings}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}{{{footer}}}",
  "packageRules": [
    {
      "matchPackageNames": ["*"],
      "commitMessageSuffix": "{{#if isGroup}}with {{length (distinct (lookupArray upgrades 'depName'))}} updates ({{#each (distinct (lookupArray upgrades 'depName'))}}{{.}}{{#unless @last}}, {{/unless}}{{/each}}){{/if}}"
    },
    {
      "matchManagers": ["nuget"],
      "groupName": "nuget/dotnet-framework",
      "matchPackageNames": ["dotnet-sdk", "Microsoft.{/,}**", "System.{/,}**", "!Microsoft.Orleans.{/,}**"]
    },
    {
      "matchManagers": ["nuget"],
      "groupName": "nuget/orleans",
      "matchPackageNames": ["Microsoft.Orleans.{/,}**", "OrleansDashboard{/,}**"]
    },
    {
      "matchManagers": ["nuget"],
      "groupName": "nuget/tests",
      "matchPackageNames": ["xunit{/,}**", "NSubstitute", "FluentAssertions"]
    },
    {
      "matchManagers": ["nuget"],
      "groupName": "nuget/various"
    }
  ]
}
